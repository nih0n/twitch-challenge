@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <form method="POST">
        <div class="form-group">
            <label for="owner">Owner</label>
            <input type="text" name="owner" class="form-control" placeholder="rsaz" required/>
        </div>
        <div class="form-group">
            <label for="repository">Repository</label>
            <input type="text" name="repository" class="form-control" placeholder="mankind" required/>
        </div>
        <button type="submit" class="btn btn-primary">Search</button>
    </form>
    @if (Model.Contributors is not null && Model.Contributors.Count() > 0)
    {
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th scope="col">
                        Login
                    </th>
                    <th scope="col">
                        Contributions
                    </th>
                </tr>
                <tbody>
                    @foreach (var contributor in Model.Contributors)
                    {
                        <tr>
                            <td>
                                @contributor.Login
                            </td>
                            <td>
                                @contributor.Contributions
                            </td>
                        </tr>
                    }
                </tbody>
            </thead>
        </table>
    }
</div>
